{
  "name": "web-authentication-demo",
  "version": "0.0.0",
  "description": "Node.js Web Authentication API demo.",
  "author": "Roland Warmerdam (https://roland.codes)",
  "repository": "Rowno/web-authentication-demo",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "build": "yarn tsc && next build",
    "start": "node dist/src/server/boot.js",
    "ts-node": "ts-node --compiler-options '{\"module\":\"commonjs\"}'",
    "tsc": "tsc --module commonjs --outDir dist --target es2019 --lib es2020,dom --noEmit false --incremental true --isolatedModules false",
    "seed": "yarn ts-node scripts/seed-database.ts",
    "dev-typescript": "yarn tsc --watch --preserveWatchOutput",
    "dev-server": "PORT=3001 nodemon --delay 0.1 --watch dist dist/src/server/boot.js",
    "dev-next": "next dev --port 3002",
    "dev-proxy": "yarn ts-node scripts/dev-proxy.ts",
    "dev": "yarn tsc && concurrently -n typescript,server,next,proxy yarn:dev-typescript yarn:dev-server yarn:dev-next yarn:dev-proxy",
    "test-server": "NODE_ENV=test yarn start"
  },
  "engines": {
    "node": "^12"
  },
  "dependencies": {
    "@github/webauthn-json": "^0.4.1",
    "@hapi/joi": "^16.1.7",
    "@material-ui/core": "^4.9.1",
    "@material-ui/icons": "^4.9.1",
    "base64url": "^3.0.1",
    "cbor": "^5.0.1",
    "connect-redis": "^4.0.4",
    "cose-to-jwk": "^1.1.0",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "express-session": "^1.17.0",
    "helmet": "^3.21.1",
    "http-errors": "^1.7.3",
    "ioredis": "^4.14.1",
    "isomorphic-unfetch": "^3.0.0",
    "jwk-to-pem": "^2.0.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "next": "^9.3.2",
    "notistack": "^0.9.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "slonik": "^22.2.1",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/cbor": "^5.0.0",
    "@types/connect-redis": "^0.0.13",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.16",
    "@types/hapi__joi": "^16.0.9",
    "@types/helmet": "^0.0.45",
    "@types/http-errors": "^1.6.3",
    "@types/http-proxy": "^1.17.3",
    "@types/ioredis": "^4.14.7",
    "@types/jwk-to-pem": "^2.0.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.11",
    "@types/node-fetch": "^2.5.4",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/slonik": "^22.1.2",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-xo": "^0.29.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-typescript": "^0.26.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "http-proxy": "^1.18.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  },
  "eslintIgnore": [
    "/.next/",
    "/dist/"
  ],
  "eslintConfig": {
    "extends": [
      "xo/esnext",
      "xo-react",
      "xo-typescript",
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "prefer-destructuring": "off",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  }
}
